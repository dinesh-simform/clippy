{
  "name": "clipsy",
  "version": "1.0.0",
  "description": "A secure, modern clipboard manager built with Electron and React.",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "electron": "electron .",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "app",
    "react"
  ],
  "author": "Clipsy Team dinesh.prajapati@simformsolutions.com",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.17",
    "better-sqlite3": "^11.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.clipsy.clipboard-manager",
    "productName": "Clipsy",
    "copyright": "Copyright Â© 2025 Clipsy",
    "files": [
      "main.js",
      "database.js",
      "create-icon.js",
      "index.html",
      "spotlight.html",
      "dist/bundle.js",
      "dist/bundle.js.map",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/clipsy-icon-textonly-theme.png",
      "executableName": "clipsy",
      "maintainer": "Clipsy Team <clipsy@example.com>"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/clipsy-icon-textonly-theme.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "assets/clipsy-icon-textonly-theme.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
